<h1>Invitations</h1>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>E-mail</th>
    </tr>
  </thead>
  <tbody>
  {{#each model as |invitation|}}
    <tr>
      <th>{{invitation.id}}</th>
      <td>{{invitation.email}}</td>
      <td>
          <button type="button" class="btn btn-danger btn-xs" {{action 'deleteInvitation' invitation}}>
            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
          </button>
      </td>
    </tr>
  {{/each}}
  </tbody>
</table>
