<form>
  <div class="form-group has-feedback {{if model.isValidEmailAddress 'has-success'}}">
    {{input type="email" value=model.email class="form-control" placeholder="Please type your e-mail address." autofocus="autofocus"}}
    {{#if model.isValidEmailAddress}}
      <span class="glyphicon glyphicon-ok form-control-feedback" aria-hidden="true"></span>
    {{/if}}
  </div>
  <div class="form-group">
    {{textarea class="form-control" placeholder="Your message. (At least 5 characters.)" rows="7" value=model.message}}
  </div>
  <div class="form-group">
    <button class="btn btn-primary" disabled={{model.isDisabled}} {{action 'sendMessage' model}}>Send Message</button>
  </div>

  {{#if responseMessage}}
    <div class="alert alert-success">{{responseMessage}}</div>
  {{/if}}
</form>
